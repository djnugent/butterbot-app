<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical" android:layout_height="match_parent"
android:paddingLeft="10dp" android:paddingRight="10dp"
android:background="@color/Butterbot_background_dark" android:layout_width="400dp"
android:paddingTop="10dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Particle Login"
        android:textSize="27dp"
        android:textColor="@android:color/white"
        android:textAlignment="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your 40 character particle access token"
        android:textSize="15dp"
        android:textColor="@android:color/darker_gray"
        android:textAlignment="center"/>
    <EditText
        android:id="@+id/txtAccess_token"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textColor="@android:color/white"
        android:textSize="12dp"
        android:hint="access_token"
        android:textColorHint="@color/black_overlay">
        <requestFocus/>
    </EditText>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1">
        <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnDone"
            android:background="@android:color/transparent"
            android:textColor="@android:color/white"
            android:text="Done"/>
    </LinearLayout>
</LinearLayout>